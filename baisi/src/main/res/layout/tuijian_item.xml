<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
   >
    <ImageView
        android:id="@+id/tuijian_icon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
       />
    <LinearLayout
        android:layout_toRightOf="@+id/tuijian_icon"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tuijian_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="五姐夫"/>
        <TextView
            android:id="@+id/tuijian_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2016-07-04"/>
    </LinearLayout>
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text=". . ."
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/tuijian_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是我见过最搞笑的作品！让大爷大娘逗死了哈哈！"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/tuijian__content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        />

</LinearLayout>